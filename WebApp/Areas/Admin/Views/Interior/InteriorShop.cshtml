@model IEnumerable<Core.BLL.DTO.Entities.Interior>

@{
    ViewData["Title"] = "InteriorShop";
}

<h1>@Shared.Resources.SharedRes.Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LevelNeeded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Boost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LevelNeeded)
            </td>
            <td>
                <a asp-action="BuyInterior" asp-route-id="@item.Id">@Shared.Resources.SharedRes.Buy</a>
            </td>
        </tr>
}
    </tbody>
</table>
