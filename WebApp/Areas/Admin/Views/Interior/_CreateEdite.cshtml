@model WebApp.Areas.Admin.ViewModels.InteriorCreateEditeViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Interior.Level" class="control-label"></label>
    <input asp-for="Interior.Level" class="form-control" />
    <span asp-validation-for="Interior.Level" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Interior.Name" class="control-label"></label>
    <input asp-for="Interior.Name" class="form-control">
    <span asp-validation-for="Interior.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Interior.Stat" class="control-label"></label>
    <select asp-for="Interior.Stat" asp-items="Model.StatList" class="form-control"></select>
    <span asp-validation-for="Interior.Stat" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Interior.Boost" class="control-label"></label>
    <input type="number" asp-for="Interior.Boost" class="form-control" />
    <span asp-validation-for="Interior.Boost" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Interior.Cost" class="control-label"></label>
    <input asp-for="Interior.Cost" class="form-control" />
    <span asp-validation-for="Interior.Cost" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Interior.LevelNeeded" class="control-label"></label>
    <input asp-for="Interior.LevelNeeded" class="form-control" />
    <span asp-validation-for="Interior.LevelNeeded" class="text-danger"></span>
</div>