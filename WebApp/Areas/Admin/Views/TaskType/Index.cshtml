@model IEnumerable<Core.BLL.DTO.Entities.TaskType>

@{
    ViewData["Title"] = "Index";
}

<h1>@Shared.Resources.SharedRes.Index</h1>

<p>
    <a asp-action="Create">@Shared.Resources.SharedRes.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Money)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaysToComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursToComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinutesToComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RewardPriceLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goal)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Money)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysToComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursToComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinutesToComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RewardPriceLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goal)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Shared.Resources.SharedRes.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Shared.Resources.SharedRes.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Shared.Resources.SharedRes.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
