@model Core.BLL.DTO.Entities.Logs

@{
    ViewData["Title"] = "Details";
}

<h1>@Shared.Resources.SharedRes.Details</h1>

<div>
    <h4>@Core.Resources.Domain.DomainEntities.Log</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Avatar!.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Shared.Resources.SharedRes.Edit</a> |
    <a asp-action="Index">@Shared.Resources.SharedRes.BackToList</a>
</div>
